{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "es2017.object"
        ]
    },
    "module": "ESNext",
    "exclude": [
        "node_modules",
    ],
    "include": [
        "./src"
    ],
}